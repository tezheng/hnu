{
  "$schema": "https://json.schemastore.org/tsconfig",
  "version": "1.0.0",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["keystone.ts", "src/**/*.ts", "tests/**/*"]
}
